<!ELEMENT biblioteca (webside, libro*)>
    <!ELEMENT libro (titulo, autores, editorial, fecha_publicacion, isbn)+>
        <!ELEMENT titulo (#PCDATA)>
        <!ELEMENT autores (autor)+>
            <!ELEMENT autor (#PCDATA)>
        <!ELEMENT editorial (#PCDATA)>
        <!ELEMENT fecha_publicacion (dia, mes, año)>
            <!ELEMENT dia (#PCDATA)>
            <!ELEMENT mes (#PCDATA)>
            <!ELEMENT año (#PCDATA)>
        <!ELEMENT isbn (#PCDATA)>
        <!ELEMENT webside (a)>
        <!ELEMENT a (#PCDATA)>
        <!ATTLIST a  
         href CDATA #IMPLIED
         xmlns CDATA #IMPLIED 
         target (_blank|_self|marco) "_self">
